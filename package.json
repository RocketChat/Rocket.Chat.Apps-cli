{
  "name": "@rocket.chat/apps-cli",
  "description": "The CLI tool for helping with Rocket.Chat Apps.",
  "version": "1.12.1",
  "type": "commonjs",
  "author": "Rocket.Chat <support@rocket.chat>",
  "preferGlobal": true,
  "bin": {
    "rc-apps": "./bin/run"
  },
  "bugs": {
    "url": "https://github.com/RocketChat/Rocket.Chat.Apps-cli/issues"
  },
  "dependencies": {
    "@oclif/core": "^4.0.24",
    "@rocket.chat/apps-compiler": "^0.5.1",
    "@rocket.chat/apps-engine": "^1.55.0",
    "chalk": "^5.6.2",
    "chokidar": "^4.0.3",
    "conf": "^14.0.0",
    "@inquirer/prompts": "^7.8.6",
    "semver": "^7.7.2",
    "systeminformation": "^5.27.10",
    "tv4": "^1.3.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "yazl": "^3.3.1"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4.1.14",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.5.1",
    "@types/semver": "^7.7.1",
    "@types/tv4": "^1.2.33",
    "@types/yazl": "^3.3.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "chai": "^6.0.1",
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "typescript-eslint": "^8.18.2",
    "http-server": "^14.1.1",
    "mocha": "^11.7.2",
    "nyc": "^17.1.0",
    "oclif": "^4.17.1",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/RocketChat/Rocket.Chat.Apps-cli",
  "keywords": [
    "oclif",
    "rocket.chat",
    "apps"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "bin": "rc-apps",
    "dirname": "rc-apps",
    "commands": "./lib/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-not-found",
      "@oclif/plugin-autocomplete"
    ],
    "topicSeparator": " ",
    "topics": {}
  },
  "nyc": {
    "reporter": [
      "text",
      "json",
      "html"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RocketChat/Rocket.Chat.Apps-cli.git"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf lib dist oclif.manifest.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "npm run lint && npm run format:check",
    "prepack": "rm -rf lib && npm run build && oclif manifest && oclif readme",
    "prepare": "npm run build",
    "test": "nyc mocha -r ts-node/register --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md",
    "view-coverage": "npm run test && http-server coverage -p 9083 -c-1"
  },
  "types": "lib/index.d.ts"
}
